<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>mvc_project</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.bigdata.mvc.page.LoginPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>loginController</servlet-name>
		<servlet-class>com.bigdata.mvc.controller.LoginController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginController</servlet-name>
		<url-pattern>/loginController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>menu</servlet-name>
		<servlet-class>com.bigdata.mvc.page.MenuPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>menu</servlet-name>
		<url-pattern>/menu</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>memberSelect</servlet-name>
		<servlet-class>com.bigdata.mvc.controller.MemberSelectController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>memberSelect</servlet-name>
		<url-pattern>/memberSelect</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>memberRegist</servlet-name>
		<servlet-class>com.bigdata.mvc.page.MemberRegistPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>memberRegist</servlet-name>
		<url-pattern>/memberRegist</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.bigdata.mvc.controller.LogoutController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>memberRegistController</servlet-name>
		<servlet-class>com.bigdata.mvc.controller.MemberRegistController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>memberRegistController</servlet-name>
		<url-pattern>/memberRegistController</url-pattern>
	</servlet-mapping>
	
</web-app>